	{{#if persona.bonusPowers}}
	Bonus Powers
	<table class="powers-table">
		<tr>
			<th>
			</th>
			<th>
				Name
			</th>
			<th>
				Tags
			</th>
			<th>
				Damage
			</th>
			<th>
				Cost
			</th>
		</tr>
		{{#each actor.displayedBonusPowers as |power|}}
		<tr class="power-row {{#if (not (canUsePower ../persona power))}} faded {{/if}}" data-power-id="{{power.id}}">
			<td>
				{{#if (canUsePower ../persona power)}}
				<a class="rollPower">
					<img src="icons/dice/d20black.svg">
				</a>
				{{/if}}
			</td>
			<td>
				<a class="powerName">
					{{power.name}}
				</a>
			</td>
			<td>
				{{getPowerTagsL ../actor power}}
			</td>
			<td>
				{{getDamage ../actor power}}
			</td>
			<td>
				{{powerCostString power ../persona}}
			</td>
		</tr>
		{{/each}}
	</table>
	{{/if}}

