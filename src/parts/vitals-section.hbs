<section class="vitals">
	<div>
		<label> HP </label>
		<span> {{persona.user.hp}} / {{persona.user.mhp}} </span>
	</div>
	{{#if persona.user.mp}}
	<div>
		<label> MP </label>
		<span> {{persona.user.mp}} / {{persona.user.mmp}} </span>
	</div>
	{{/if}}
	{{#if persona.user.energy}}
	<label> Energy </label>
	<span> {{persona.user.energy}} / {{persona.user.maxEnergy}} </span>
	{{/if}}

	{{#if persona.user.theurgyMax}}
	<div class="theurgy-bar" title="Theurgy Charge">
		<div class="theurgy-fill"></div>
	</div>
	{{/if}}
</section>

