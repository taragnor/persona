<div class="main-powers">
	{{#each persona.mainPowers as |power i|}}
	<div class="main-power" data-power-id="{{power.id}}">
		<div class="power-name-block {{#if (lte ../actor.maxMainPowers i)}} over-max-power {{/if}} {{#if (isPowerIllegal ../actor power)}} illegal-level {{/if}}">
			<span class="die-with-text">
				{{#if (canUsePower ../persona.user power)}}
				<a class="rollPower" >
					<img class="small-die" src="icons/dice/d20black.svg">
				</a>
					{{/if}}
					<a class="powerName" title='{{> "systems/persona/parts/power-tooltip-lite.hbs" actor=../actor CONST=../CONST power=power}}'>
						{{> "systems/persona/parts/pretty-power-name.hbs" CONST=CONST power=power user=../persona}}
						<span class="cost-string">
							({{powerCostString power ../persona.user}})
						</span>
					</a>
			</span>
		</div>
		<div class="power-operations">
			{{#if (canSideboardPowers ../persona)}}
			<a class="sort-up">
				<i class="fa-solid fa-sort-up"></i>
			</a>
			<a class="sort-down">
				<i class="fa-solid fa-sort-down"></i>
			</a>
			<a class="move-to-sideboard" title="Move to Sideboard">
				<i class="fa-solid fa-people-carry-box"></i>
			</a>
			{{/if}}
			{{#if (eq ../persona.user.system.type "shadow")}}
			<a class="recost-power">
				<i class="fa-solid fa-circle-dot"></i>
			</a>
			{{/if}}
			{{#if (canDeletePowers ../persona)}}
			<a class="delPower" title="Delete Power">
				<i class="fa-solid fa-trash-can"></i>
			</a>
			{{/if}}
		</div>
	</div>
	{{/each}}
</div>

