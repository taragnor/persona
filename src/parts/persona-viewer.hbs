<section class="persona-viewer" data-persona-id="{{persona.source.id}}">
	<h2 class="persona-name">
		<a>
			{{persona.name}}
		</a>
	</h2>
	<div class="f-row">
		<a class="back" title="Back to List">
			<i class="fa-solid fa-backward"></i>
		</a>
		<div>
			<div>
				<img class="profile-img" src="{{persona.img}}">
			</div>
		</div>
	</div>
	<div class="level">
		Level: {{persona.level}}
		<span>
			<progress id="progressBar" max="{{persona.XPForNextLevel}}" value="{{persona.xp}}" title="{{persona.xp}} / {{persona.XPForNextLevel}}"></progress>
		</span>
	</div>
	{{> "systems/persona/parts/defenses-section.hbs" CONST=CONST persona=persona}}
	{{> "systems/persona/parts/resistance-section.hbs" CONST=CONST persona=persona}}
	{{> "systems/persona/parts/powers-table.hbs" actor=actor CONST=CONST persona=persona showBonusPowers=false showLearnedBuffer=true activePowersOnly=false canDelete=false showSideboard=false usePowers=false}}
	{{> "systems/persona/parts/talents-section.hbs" actor=actor CONST=CONST persona=persona}}
	<div>
		{{> "systems/persona/parts/persona-stats-display.hbs" CONST=CONST persona=persona}}
	</div>

	{{#if selectedPersona.isActivateable}}
	<button class="activate-persona">
		Switch to this Persona
	</button>
	{{/if}}
</section>

