<div class="powers-section">
	<h2>
		{{localize 	"persona.statistic.powers"}}
		{{#if showPowerTableButton}}
		<a class="showPowersTable">
			<i class="fa-solid fa-table-list"></i>
		</a>
		{{/if}}

		{{#if (isShadow actor)}}
		<a class="addShadowPower">
			<i class="fa-solid fa-plus"> </i>
		</a>
		{{/if}}
	</h2>
{{> "systems/persona/parts/basic-powers-section.hbs" CONST=CONST persona=persona activePowersOnly=activePowersOnly canDelete=canDelete showSideboard=showSideboard usePowers=usePowers actor=actor}}

{{> "systems/persona/parts/main-powers-table.hbs" CONST=CONST persona=persona activePowersOnly=activePowersOnly canDelete=canDelete showSideboard=showSideboard usePowers=usePowers}}


<section class="power-sideboard">
{{#if (and actor.sideboardPowers showSideboard)}}
<h3> Sideboarded Powers (max {{persona.maxSideboardPowers}}) </h3>
<div class="power-sideboard">
	{{#each actor.sideboardPowers as |power i|}}
	<div class="sideboard-power" data-power-id="{{power.id}}">
		<div class="power-name-block {{#if (lte ../persona.maxSideboardPowers i)}} over-max-power {{/if}} {{#if (isPowerIllegal ../persona power)}} illegal-level {{/if}}">
			<a class="powerName" title='{{> "systems/persona/parts/power-tooltip-lite.hbs" actor=../actor CONST=../CONST power=power persona=../persona}}'>
				{{> "systems/persona/parts/pretty-power-name.hbs" CONST=../CONST power=power user=../actor}}
				<span class="cost-string">
					({{powerCostString power ../persona}})
				</span>
			</a>
		</div>
		<div class="power-operations">
			{{#if (eq ../actor.system.type "pc")}}
			<a class="move-to-main" title="Move to Main powers">
				<i class="fa-solid fa-truck-ramp-box"></i>
			</a>
			{{/if}}
			<a class="delPower" title="Delete Power">
				<i class="fa-solid fa-trash-can"></i>
			</a>
		</div>
	</div>
	{{/each}}
</div>
{{/if}}
</section>

{{#if (and showLearnedBuffer persona.source.topLearnedBuffer)}}
<hr>
<section class="learned-powers">
	<h3> Learned Powers (out of space) </h3>
	<div class="powers-table">
		<div class="powers-table-item" data-power-id="{{actor.topLearnedBuffer.id}}">
			<div class="power-name-block">
				<a class="powerName">
					{{> "systems/persona/parts/pretty-power-name.hbs" CONST=CONST power=persona.source.topLearnedBuffer user=actor}}
				</a>
			</div>
			<div class="power-operations">
				<a class="delPower" title="Delete Power">
					<i class="fa-solid fa-trash-can"></i>
				</a>
			</div>
		</div>
	</div>
</section>
{{else}}
{{#if persona.source.nextPowerToLearn}}
<section class="next-power-to-learn">
	<div>Next Power to Learn: </div>
	<div class="powers-table">
		<div class="next-power-to-learn powers-table-item" data-power-id="{{actor.nextPowerToLearn.id}}">
			<div class="power-name-block">
				<a class="powerName">
					{{> "systems/persona/parts/pretty-power-name.hbs" CONST=CONST power=persona.source.nextPowerToLearn user=actor}}
				</a>
				<span class="level-to-learn">
					at L {{persona.source.nextLevelLearnPower}}
				</span>
			</div>
		</div>
	</div>
</section>
{{/if}}

{{/if}}



{{#if showBonusPowers}}
{{> "systems/persona/parts/bonus-powers-table.hbs" CONST=CONST persona=persona actor=actor usePowers=usePowers}}
{{/if}}

</div>

