<div class="itemTags">
	{{#if (isGM)}}
	<h2>
		<span>Item Tags</span>
		<a class="addItemTag">
			<i class="fa-solid fa-plus"> </i>
		</a>
	</h2>
	<div class="tag-list">
		{{#each item.system.itemTags as |tag i|}}
		<div class="tag-item" data-tag-index="{{i}}" title="{{tagTooltip tag}}">
			<select name="system.itemTags.{{i}}">
				{{selectOptions ../POWERSTUFF.EQUIPMENT_TAGS localize=true selected=tag}}
			</select>
			<a class="delTag">
				<i class="fa-solid fa-trash-can"></i>
			</a>
		</div>
		{{/each}}
	</div>
	{{else}}
	<span>Tags: </span>
	<span>{{getItemTagList item}}</span>
	{{/if}}
</div>
