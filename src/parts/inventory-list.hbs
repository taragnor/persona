<section class="items f-col">
	<div class="item-list">
		{{#each itemlist as |item|}}
		<div class="{{#if (ne item.system.noTrade true)}} item item-entry {{/if}} inventory-item" data-item-id="{{item.id}}">
			{{#if (isItemUsable item)}}
			<span>
			<a class="rollItem">
				<img class="inline" src="icons/dice/d20black.svg">
			</a>
			{{/if}}
			<span class="item-icon">
				{{displayIcon item}}
			</span>
			<span class="itemName" title="{{item.description}}">
				{{item.name}}
				{{#if (gt item.amount 1)}}
				( {{item.amount}} )
				{{/if}}
			</span>
			<a class="delItem">
				<i class="fa-solid fa-trash-can"></i>
			</a>
			</span>
		</div>
		{{/each}}
	</div>

</section>

