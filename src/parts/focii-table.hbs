{{#if (canUseCustomFocii actor)}}
<div class="focus-section">
	<h2>
		{{localize 	"persona.statistic.focii"}}
		{{#if (isGM)}}
		<a class="addShadowFocus">
			<i class="fa-solid fa-plus"> </i>
		</a>
		{{/if}}
	</h2>

	<table class="focus-table">
		{{#each persona.focii as |focus|}}
		<tr data-focus-id="{{focus.id}}">
			<td>
				<a class="focusName">
					{{focus.name}}
				</a>
			</td>
			<td>
				{{#if (isGM)}}
				<a class="delFocus">
					<i class="fa-solid fa-trash-can"></i>
				</a>
				{{/if}}
			</td>
		</tr>
		{{/each}}
	</table>
</div>

{{/if}}
