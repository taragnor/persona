<section class="personal-stats">
	<div class="personal-lvl">
		<span class="personal-xp">
			<label>
				Character Level
			</label>
			<span>
				{{actor.level}}
			</span>
			<progress id="progressBar" max="{{actor.XPForNextLevel}}" value="{{actor.personalXPTowardsNextLevel}}" title="{{actor.personalXPTowardsNextLevel}} / {{actor.XPForNextLevel}}"></progress>
		</span>
	</div>

	<div>
		{{> "systems/persona/parts/hp-mp-section.hbs" actor=actor POWERSTUFF=POWERSTUFF}}
	</div>
	<hr>
	{{> "systems/persona/parts/equipped-items.hbs" actor=actor CONST=CONST}}
	<hr>
	<section class="student-skills">
		<h2> Student Skills</h2>
		<div class="social-stat" data-social-skill="expression">
			<label>
				<a class="roll-icon">
					<img src="icons/dice/d20black.svg">
				</a>
				{{localize	"persona.skills.expression.name"}}
			</label>
			{{#if ( isGM )}}
			{{numberInput actor.system.skills.expression class="short" name="system.skills.expression" step=1 min=0 max=100}}
			{{else}}
			{{actor.system.skills.expression}}
			{{/if}}
			<a class="social-boost">
				<i class="fa-solid fa-square-plus"></i>
			</a>
			<a class="social-minus">
				<i class="fa-solid fa-square-minus"></i>
			</a>
		</div>
