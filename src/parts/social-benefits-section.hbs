<section class="f-col">
	<h2>
		{{localize "persona.sheet.tabs.social-benefits.header" }}
		<a class="showTarotList" title="Show tarot list">
			<i class="fa-solid fa-table-list"></i>
		</a>
	</h2>
	{{#each actor.socialLinks as |link|}}
	<span class="sl-name">
		<b> {{link.actor.name}}</b>
	</span>
	<ul>
		{{#each link.focii as |focus|}}
		<li>
			<b>{{focus.name}}:</b>
			{{focus.system.description}}
		</li>
		{{/each}}
	</ul>
	{{/each}}
</section>
