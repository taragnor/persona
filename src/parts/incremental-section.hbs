<h2>
	{{localize "persona.sheet.tabs.incremental.header"}}
</h2>

<div class="lvl">
	<span>
		{{localize "persona.statistic.level"}}:
	</span>
	<span>
		{{actor.basePersona.level}}
	</span>
	{{#if (isGM)}}
	<span>
		<a class="levelUp">
			<i class="fa-solid fa-circle-plus"></i>
		</a>
	</span>
	{{/if}}
	<span>
		<progress id="progressBar" max="{{actor.basePersona.XPForNextLevel}}" value="{{actor.basePersona.xp}}" title="{{actor.basePersona.xp}} / {{actor.basePersona.XPForNextLevel}}"></progress>
	</span>
</div>
<hr>

<div class="incremental-advance-block">
	<div class="hp">
		<label>
			HP {{actor.system.combat.classData.incremental.hp}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.hp 3)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
</a>
		{{/if}}
	</div>
	<div class="mp">
		<label>
			MP {{actor.system.combat.classData.incremental.mp}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.mp 3)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
		</a>
		{{/if}}
	</div>
	<div class="wpnDamage">
		<label>
			Weapon Damage {{actor.system.combat.classData.incremental.wpnDamage}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.wpnDamage 2)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
		</a>
		{{/if}}
	</div>

	<div class="initiative">
		<label>
			Initiative Bonus {{actor.system.combat.classData.incremental.initiative}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.initiative 3)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
		</a>
		{{/if}}
	</div>
	<div class="attack">
		<label>
			Attack Bonus {{actor.system.combat.classData.incremental.attack}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.attack 2)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
		</a>
		{{/if}}
	</div>
	<div class="defense">
		<label>
			Defense Bonus {{actor.system.combat.classData.incremental.defense}}
		</label>
		{{#if (lt actor.system.combat.classData.incremental.defense 2)}}
		<a class="add">
		<i class="fa-solid fa-square-plus"></i>
		</a>
		{{/if}}
	</div>

	{{#each CONST.INC as |inc i|}}
	<div class="incremental-advance">
		<label>
			{{localize inc.local}}
		</label>
		<input type="checkbox" name="system.combat.classData.incremental.{{inc.varname}}" {{checked inc.val}}>
	</div>
	{{/each}}
</div>
