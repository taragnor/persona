{{#if (gte (scanLevel persona) 2)}}
<div class="defenses">
	{{#each CONST.REAL_DEFENSE_TYPES as |locName systemName|}}
	<div class="defense" title="{{defenseBreakdown ../persona systemName}}">
		<label>
			{{localize locName}}
		</label>
		{{getDefense ../persona systemName}}
	</div>
	{{/each}}
	<div class="initiative" title="{{getInitBreakdown persona}}">
		<label>
			Initiative
		</label>
		{{getInit persona}}
	</div>
</div>
{{/if}}

