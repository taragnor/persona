<section class="effect-section">
	<label>
		Sound
	</label>
	<div class="flexrow">
		{{filePicker type="audio" target="system.sound"}}
		<input class="img" type="hidden" name="system.sound" value="{{item.system.sound}}">
		{{#if item.system.sound}}
		<div>{{item.system.sound}}</div>
		{{/if}}
	</div>
	{{#if (hasTag item "opener")}}
	<div class="opening-conditions" data-top-path="system.openerConditions" data-path="system.openerConditions">
		<h3> Prereqs to Open </h3>
		{{> "systems/persona/parts/conditions-section.hbs" namePrefix="system.openerConditions." POWERSTUFF=POWERSTUFF owner=item}}
	</div>
	{{/if}}
	{{#if (hasTag item "teamwork")}}
	<div class="teamwork-conditions" data-top-path="system.teamworkConditions" data-path="system.teamworkConditions">
		<h3> Prereqs to Use Teamwork </h3>
		{{> "systems/persona/parts/conditions-section.hbs" namePrefix="system.teamworkConditions." POWERSTUFF=POWERSTUFF owner=item}}
	</div>
	{{/if}}
	{{#if (hasTag item "follow-up")}}
	<div class="teamwork-conditions" data-top-path="system.teamworkConditions" data-path="system.teamworkConditions">
		<h3> Prereqs to Use Follow-Up </h3>
		{{> "systems/persona/parts/conditions-section.hbs" namePrefix="system.teamworkConditions." POWERSTUFF=POWERSTUFF owner=item}}
	</div>
	{{/if}}
	<div class="targets">
		<label>
			Targets
		</label>
		<select name="system.targets">
			{{selectOptions POWERSTUFF.TARGETING localize=true selected=item.system.targets}}
		</select>
	</div>
	<div class="target-conditions" data-top-path="system.validTargetConditions" data-path="system.validTargetConditions">
		<h3> Prereqs of Targets </h3>
		{{> "systems/persona/parts/conditions-section.hbs" namePrefix="system.validTargetConditions." POWERSTUFF=POWERSTUFF owner=item}}
	</div>
	<div class="defense">
		<label>
			Defense Targetted
		</label>
		<select name="system.defense">
			{{selectOptions POWERSTUFF.DEFENSES localize=false selected=item.system.defense}}
		</select>
	</div>
	<div class="dmg-type">
		<label>
			Damage Type
		</label>
		<select name="system.dmg_type">
			{{selectOptions POWERSTUFF.DAMAGETYPES localize=true selected=item.system.dmg_type}}
		</select>
	</div>
	<div class="atk-boost">
		<label>
			Attack Bonus
		</label>
		{{numberInput item.system.atk_bonus class="short" name="system.atk_bonus" step=1 min=0 max=900}}
	</div>
	<div class="crit-boost">
		<label>
			Crit Boost
		</label>
		{{numberInput item.system.crit_boost class="short" name="system.crit_boost" step=1 min=-20 max=900}}
	</div>
	{{> "systems/persona/parts/effects-section.hbs" item=item POWERSTUFF=POWERSTUFF}}
</section>
