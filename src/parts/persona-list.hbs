<section class="persona-list f-col">
	{{#if (not selectedPersona)}}
	<h2>Persona List</h2>
	<ul class="persona-list">
		{{#each actor.personaList as |persona i|}}

		<li class="f-row" data-persona-id="{{persona.source.id}}">
			<div class="persona-name">
				<a>
					{{persona.name}}
				</a>
			</div>
			<div>
				<a class="delPersona">
					<i class="fa-solid fa-trash-can"></i>
				</a>
			</div>
		</li>
		{{/each}}
	</ul>
	{{else}}

	{{> "systems/persona/parts/persona-viewer.hbs" actor=actor CONST=CONST persona=selectedPersona selectedPersona=selectedPersona}}
	{{/if}}
</section>
