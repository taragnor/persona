<section class="combat-section">
	<div class="combat-stats flexcol">
		<div class="flexrow">
			<div class="hp" title="{{hpBreakdown actor}}">
				<label>
					HP:
				</label>
				<span>
					{{#if (isGM)}}
					<span class="hp-main">
						<input class="short" type="number" name="system.combat.hp" value="{{actor.hp}}">
					</span>
					{{else}}
					<span class="hp-main">
						{{actor.hp}}
					</span>
					{{/if}}
				</span>
				<span class="max-hp">
					/ {{actor.mhpEstimate}}
				</span>
				{{#if actor.system.combat.bonusHP}}
				<span class="bonus-HP">
					(+ {{actor.system.combat.bonusHP}})
				</span>
				{{/if}}
			</div>
			{{#if (hasMP actor)}}
			<div class="mp" title="{{mpBreakdown actor}}">
				<label> MP </label>
				<span>
					{{#if (isGM)}}
					<input class="short" type="number" name="system.combat.mp.value" value="{{actor.system.combat.mp.value}}">
					{{else}}
					{{actor.system.combat.mp.value}}
					{{/if}}
				</span>
				<span>
					/ {{actor.mmp}}
				</span>
				{{#if actor.system.combat.bonusMP}}
				<span class="bonus-MP">
					(+ {{actor.system.combat.bonusMP}})
				</span>
				{{/if}}
			</div>
			{{/if}}
		</div>
		{{#if (hasPersona actor)}}
		<div class="active-persona">
			<label>
				Active Persona:
			</label>
			<span>
				{{persona.displayedName}}
			</span>
		</div>
		{{/if}}
		{{#if (isShadow actor)}}
		<div class="basic-attack-type">
			<span>
				<label> Basic Attack Damage Type:</label>
			</span>
			<span>
				{{actor.system.combat.baseDamageType}}

			</span>
		</div>
		{{/if}}
		{{#if (isPC actor) }}
		{{#if (gte actor.system.personaList.length 1)}}
		<div>
			<span>
				<label> Active Persona:</label>
				<select name="system.activePersona">
					{{selectOptions PERSONA_LIST localize=false selected=actor.system.activePersona}}
				</select>
			</span>
		</div>
		{{/if}}
		{{/if}}

		{{> "systems/persona/parts/defenses-section.hbs" CONST=CONST persona=persona}}
		{{> "systems/persona/parts/resistance-section.hbs" CONST=CONST persona=persona}}
		<button class="rollSave">
			Roll Save
		</button>
		{{> "systems/persona/parts/powers-table.hbs" actor=actor CONST=CONST persona=persona showBonusPowers=true showLearnedBuffer=true activePowersOnly=true canDelete=false showSideboard=false usePowers=true}}
	</div>
</section>
