<form class="item-sheet">
	<header>
		<div class="flexrow">
			<div>
				<img class="profile-img" src="{{item.img}}" data-edit="img"/>
			</div>
			<div>

				<h2> Item </h2>
				<input type="text" class="borderless character-name" name="name" value="{{item.name}}" title="Power Name" placeholder="Power Name">

	<div class="equip-slot">
		<label>
			Slot
		</label>
		<select name="system.slot">
			{{selectOptions EQUIP_SLOTS localize=true selected=item.system.slot}}
		</select>
	</div>

	<textarea name="system.description">
		{{item.system.description}}
	</textarea>

	{{#if (isGM)}}
	<label> Price </label>
	{{numberInput item.system.price class="short" name="system.price" step=1 min=0 max=900}}
	<br>
	<label> No Trade </label>
	<input type="checkbox" name="system.noTrade" {{checked item.system.noTrade}}>
	{{else}}
	{{#if item.system.noTrade}}
	<b> Can't trade</b>
	{{/if}}
	{{/if}}
			</div>
	</header>

	{{> "systems/persona/parts/effects-section.hbs" item=item POWERSTUFF=POWERSTUFF}}
</form>
