<div class="control-panel">

	<header>
		<h3> {{token.name}}</h3>
		{{> "systems/persona/parts/vitals-section.hbs" CONST=CONST persona=persona}}
	</header>

	<hr>

	{{> "systems/persona/parts/defenses-section.hbs" CONST=CONST persona=persona}}

	{{> "systems/persona/parts/resistance-section.hbs" CONST=CONST persona=persona}}

{{> "systems/persona/parts/basic-powers-section.hbs" CONST=CONST persona=persona actor=actor}}

	<div class="main-powers">
		{{#each persona.activeCombatPowers as |power i|}}
		<div class="main-power {{#if (not (canUsePower ../persona power))}} faded {{/if}}" data-power-id="{{power.id}}" title="{{powerCostString power ../persona}}">
			<div class="power-name-block {{#if (lte ../actor.maxPowers i)}} over-max-power {{/if}} ">
				<div class="power-name-bubble-container">
					{{> "systems/persona/parts/pretty-power-name.hbs" CONST=../CONST power=power user=../persona}}
				</div>
			</div>
		</div>
		{{/each}}
	</div>

</div>
