{{#if (eq mode "tactical")}}
<h2 title="right click to exit"> Tactical View </h2>
{{/if}}
<div class="control-panel {{#if (isCombatPanelActive)}}active-control-panel{{/if}}">
	<header>
		<h3 class="token-name"> {{token.name}}</h3>
		{{#if actor.canSwitchPersonas}}
		<div>
			<b>
				Active Persona:
			</b>
			<span class="persona-name">
				{{persona.name}}
			</span>
		</div>
		{{/if}}
		{{> "systems/persona/parts/vitals-section.hbs" CONST=CONST persona=persona}}
	</header>
	<hr>
	<body>
		{{#if (eq mode "main")}}
		{{> "systems/persona/parts/combat-panel-control-body-main.hbs" CONST=CONST persona=persona actor=persona.user}}
		{{/if}}
		{{#if (eq mode "inventory")}}
		{{> "systems/persona/parts/combat-panel-control-body-inventory.hbs" CONST=CONST persona=persona actor=persona.user}}
		{{/if}}
		{{#if (eq mode "persona")}}
		{{> "systems/persona/parts/persona-list-list.hbs" actor=actor CONST=CONST persona=selectedPersona selectedPersona=selectedPersona showSideboard=false personaControls=false}}
		{{/if}}
		{{#if (eq mode "opener")}}
		{{> "systems/persona/parts/combat-panel-opener-list.hbs" actor=persona.user CONST=CONST persona=selectedPersona openers=openers combatant=combatant}}
		{{/if}}
	</body>
</div>
